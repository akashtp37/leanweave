{
  "designSystem": {
    "name": "LeanWeave Design System",
    "version": "1.0.0",
    "description": "Comprehensive design system for LeanWeave web platform. This file captures all design tokens, component patterns, and design principles to ensure consistent implementation across all pages.",
    
    "designPhilosophy": {
      "principles": [
        "Modern and Professional: Clean, contemporary aesthetic that conveys technical expertise",
        "Warm and Inviting: Orange gradient palette creates approachable, energetic feeling",
        "Precision and Clarity: Structured layouts with clear hierarchy and spacing",
        "Engaging Interactions: Subtle animations and hover effects enhance user experience",
        "Responsive First: Mobile-first approach with graceful degradation",
        "Consistent Patterns: Reusable components ensure visual harmony across all pages"
      ],
      "aesthetic": "Contemporary tech company with warm, approachable personality. Combines dark hero sections with light content areas. Uses gradient accents and smooth animations to create depth and interest."
    },

    "colors": {
      "primary": {
        "base": "#ff6b35",
        "description": "Main brand orange - used for primary actions, accents, and highlights",
        "usage": ["Buttons", "Links", "Active states", "Borders", "Accent lines", "Gradient starts"]
      },
      "secondary": {
        "base": "#ff8c00",
        "description": "Supporting orange - used in gradients and secondary elements",
        "usage": ["Gradient ends", "Hover states", "Secondary buttons"]
      },
      "dark": {
        "base": "#1A1A2E",
        "description": "Deep dark color for hero backgrounds and footer",
        "usage": ["Hero sections", "Footer background", "Dark overlays"]
      },
      "light": {
        "base": "#FFFFFF",
        "description": "Pure white for cards and content backgrounds",
        "usage": ["Cards", "Content backgrounds", "Text on dark backgrounds"]
      },
      "text": {
        "primary": "#333333",
        "secondary": "#666666",
        "light": "#555555",
        "description": "Text color hierarchy - primary for headings, secondary for body text",
        "usage": {
          "primary": "Headings, important text",
          "secondary": "Body text, descriptions",
          "light": "Muted text, captions"
        }
      },
      "backgrounds": {
        "body": "#FFFFFF",
        "section": "#F8F9FA",
        "card": "#FFFFFF",
        "hover": "#F5F5F5",
        "description": "Background color system for different content areas"
      },
      "borders": {
        "default": "#E5E5E5",
        "light": "#eee",
        "accent": "rgba(255, 107, 53, 0.2)",
        "description": "Border colors for separation and definition"
      },
      "gradients": {
        "primary": "linear-gradient(135deg, #ff6b35, #ff8c00)",
        "hero": "radial-gradient(ellipse at top left, #ff4500 0%, transparent 60%), radial-gradient(ellipse at bottom right, #ff8c00 0%, transparent 60%), linear-gradient(135deg, #1a1a1a 0%, #2d1b0e 50%, #1a1a1a 100%)",
        "section": "linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%), radial-gradient(circle at 20% 80%, rgba(255, 107, 53, .05) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 140, 0, .05) 0%, transparent 50%)",
        "description": "Gradient patterns used throughout the site"
      }
    },

    "typography": {
      "fontFamilies": {
        "heading": {
          "family": "'Cabin', sans-serif",
          "css": "var(--font-heading)",
          "usage": "All headings (h1-h4), navigation items, brand elements, emphasis text",
          "weights": [400, 600, 700, 800, 900]
        },
        "body": {
          "family": "'Inter', sans-serif",
          "css": "var(--font-paragraph)",
          "usage": "Body text, paragraphs, descriptions, form inputs",
          "weights": [400, 500, 600]
        }
      },
      "scale": {
        "h1": {
          "desktop": "clamp(3.5rem, 9vw, 8rem) or 4rem",
          "mobile": "clamp(2.5rem, 8vw, 4rem)",
          "weight": 900,
          "lineHeight": "0.9 or 1.2",
          "usage": "Hero titles, main page headings"
        },
        "h2": {
          "desktop": "2.5rem",
          "mobile": "2rem or clamp(2rem, 4vw, 3rem)",
          "weight": 600,
          "lineHeight": "1.2",
          "usage": "Section headers, page titles"
        },
        "h3": {
          "desktop": "1.5rem to 1.8rem",
          "mobile": "1.2rem to 1.5rem",
          "weight": 600,
          "lineHeight": "1.2",
          "usage": "Card titles, subsection headers"
        },
        "h4": {
          "size": "1.1rem to 1.3rem",
          "weight": 600,
          "lineHeight": "1.2",
          "usage": "Minor headings, labels"
        },
        "body": {
          "size": "1rem to 1.1rem",
          "mobile": "clamp(1rem, 1.8vw, 1.2rem)",
          "weight": 400,
          "lineHeight": "1.6 to 1.7",
          "usage": "Paragraphs, descriptions"
        },
        "small": {
          "size": "0.9rem to 0.95rem",
          "weight": 400,
          "lineHeight": "1.5",
          "usage": "Captions, fine print, metadata"
        }
      },
      "letterSpacing": {
        "tight": "-0.5px",
        "normal": "0.05em",
        "wide": "3px",
        "usage": {
          "tight": "Large headings",
          "normal": "Uppercase labels",
          "wide": "Brand marks, uppercase text"
        }
      }
    },

    "spacing": {
      "scale": {
        "xs": "0.5rem (8px)",
        "sm": "0.75rem (12px)",
        "md": "1rem (16px)",
        "lg": "1.5rem (24px)",
        "xl": "2rem (32px)",
        "2xl": "2.5rem (40px)",
        "3xl": "3rem (48px)",
        "4xl": "4rem (64px)",
        "5xl": "6rem (96px)",
        "6xl": "8rem (128px)"
      },
      "patterns": {
        "sectionPadding": {
          "vertical": "6rem to 8rem",
          "horizontal": "2rem",
          "mobile": {
            "vertical": "4rem",
            "horizontal": "1rem to 1.5rem"
          },
          "description": "Standard padding for content sections"
        },
        "containerPadding": {
          "desktop": "0 2rem",
          "mobile": "0 1rem to 1.5rem",
          "description": "Horizontal padding for container elements"
        },
        "cardPadding": {
          "default": "1.5rem to 2rem",
          "large": "2.5rem",
          "description": "Internal padding for card components"
        },
        "buttonPadding": {
          "default": "12px 28px",
          "large": "1.2rem 3rem",
          "small": "0.75rem 1.5rem",
          "description": "Padding for button components"
        },
        "gaps": {
          "tight": "0.5rem to 1rem",
          "default": "1.5rem to 2rem",
          "wide": "3rem to 4rem",
          "description": "Gap spacing for grids and flex containers"
        }
      }
    },

    "borders": {
      "radius": {
        "none": "0",
        "sm": "6px",
        "md": "8px",
        "lg": "12px",
        "xl": "16px",
        "2xl": "20px",
        "3xl": "24px",
        "round": "50px",
        "full": "50%"
      },
      "width": {
        "thin": "1px",
        "medium": "2px",
        "thick": "3px"
      },
      "patterns": {
        "cards": "12px",
        "buttons": "50px (pill shape)",
        "input": "8px",
        "badges": "6px",
        "images": "12px to 20px"
      }
    },

    "shadows": {
      "elevation": {
        "none": "none",
        "sm": "0 2px 8px rgba(0, 0, 0, 0.05)",
        "md": "0 4px 20px rgba(0, 0, 0, 0.1)",
        "lg": "0 10px 30px rgba(0, 0, 0, 0.1) or 0 10px 20px rgba(0,0,0,0.05)",
        "xl": "0 14px 32px rgba(0, 0, 0, .12) or 0 20px 40px rgba(0,0,0,0.15)",
        "colored": "0 8px 25px rgba(255, 107, 53, 0.4)"
      },
      "usage": {
        "cards": "0 4px 20px rgba(0, 0, 0, 0.06) default, 0 10px 30px rgba(0, 0, 0, 0.1) on hover",
        "buttons": "0 4px 15px rgba(255,107,53,0.3) default, 0 8px 25px rgba(255, 107, 53, 0.4) on hover",
        "header": "0 2px 20px rgba(0, 0, 0, 0.1)",
        "floating": "0 20px 40px rgba(0,0,0,0.15)"
      }
    },

    "layout": {
      "containers": {
        "maxWidth": "1200px to 1400px",
        "padding": "0 2rem (desktop), 0 1rem (mobile)",
        "margin": "0 auto",
        "description": "Standard container for page content"
      },
      "grids": {
        "responsive": "repeat(auto-fit, minmax(280px, 1fr))",
        "twoColumn": "1fr 1fr",
        "threeColumn": "repeat(3, 1fr)",
        "gap": "1.5rem to 2rem",
        "description": "Grid patterns for card layouts and content sections"
      },
      "breakpoints": {
        "mobile": "max-width: 640px",
        "tablet": "max-width: 768px",
        "laptop": "max-width: 968px",
        "desktop": "max-width: 1024px",
        "large": "max-width: 1200px"
      }
    },

    "components": {
      "buttons": {
        "primary": {
          "background": "linear-gradient(135deg, #ff6b35, #ff8c00)",
          "color": "white",
          "border": "2px solid #ff6b35",
          "padding": "12px 28px",
          "borderRadius": "50px",
          "fontWeight": 600,
          "fontSize": "1rem to 1.1rem",
          "transition": "all 0.3s ease",
          "hover": {
            "transform": "translateY(-2px)",
            "background": "linear-gradient(135deg, #d44d1c, #e67a00)",
            "boxShadow": "0 8px 25px rgba(255, 107, 53, 0.4)"
          }
        },
        "secondary": {
          "background": "transparent or gradient",
          "color": "var(--text-color) or white",
          "border": "2px solid currentColor",
          "padding": "12px 28px",
          "borderRadius": "50px",
          "hover": {
            "background": "currentColor",
            "color": "white or var(--dark-color)"
          }
        },
        "variants": {
          "outline": "Transparent background with border",
          "text": "No border, text only",
          "large": "1.2rem 3rem padding",
          "small": "0.75rem 1.5rem padding"
        }
      },

      "cards": {
        "base": {
          "background": "#FFFFFF",
          "border": "1px solid #E5E5E5 or #eee",
          "borderRadius": "12px",
          "padding": "1.5rem to 2rem",
          "boxShadow": "0 4px 20px rgba(0, 0, 0, 0.06)",
          "transition": "all 0.3s ease",
          "hover": {
            "transform": "translateY(-5px to -8px)",
            "boxShadow": "0 10px 30px rgba(0, 0, 0, 0.1)",
            "borderColor": "#ff6b35"
          }
        },
        "accent": {
          "topBorder": "3px gradient line on hover",
          "description": "Some cards feature animated top border accent on hover"
        },
        "types": {
          "service": "Image header + content",
          "tech": "Icon + title + description",
          "testimonial": "Stars + quote + client info",
          "process": "Numbered step card",
          "statistic": "Large number + label"
        }
      },

      "headers": {
        "main": {
          "background": "rgba(255, 255, 255, 0.85) with backdrop-filter blur(10px)",
          "position": "fixed",
          "height": "80px (desktop), 72px (mobile)",
          "boxShadow": "0 2px 20px rgba(0, 0, 0, 0.1)",
          "zIndex": 1000,
          "borderBottom": "1px solid rgba(255, 255, 255, 0.2)"
        },
        "section": {
          "textAlign": "center",
          "marginBottom": "4rem",
          "title": {
            "fontSize": "2.5rem",
            "fontWeight": 600,
            "marginBottom": "0.5rem to 1rem",
            "position": "relative",
            "accent": "60px wide 4px gradient underline"
          },
          "subtitle": {
            "maxWidth": "700px to 800px",
            "margin": "0 auto",
            "color": "#666",
            "fontSize": "1.1rem",
            "lineHeight": "1.6"
          }
        }
      },

      "hero": {
        "background": "Dark gradient with radial overlays",
        "minHeight": "calc(100vh - 80px)",
        "padding": "0 5%",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "position": "relative",
        "title": {
          "fontSize": "clamp(3.5rem, 9vw, 8rem)",
          "fontWeight": 900,
          "color": "white",
          "lineHeight": 0.9,
          "animation": "titleReveal - words fade in from bottom",
          "gradient": "Second word can have gradient text effect"
        },
        "subtitle": {
          "fontSize": "clamp(1rem, 1.8vw, 1.2rem)",
          "color": "rgba(255, 255, 255, 0.7 to 0.8)",
          "lineHeight": "1.6",
          "marginBottom": "2rem"
        },
        "visual": {
          "floating": "Animated geometric patterns",
          "circles": "Rotating thread circles",
          "dots": "Pulsing accent dots"
        }
      },

      "sections": {
        "light": {
          "background": "#FFFFFF or #F8F9FA",
          "padding": "6rem to 8rem 2rem",
          "borderTop": "3px gradient line (optional)"
        },
        "dark": {
          "background": "Dark gradient",
          "color": "white",
          "padding": "6rem to 8rem 2rem",
          "borderRadius": "24px (when in container)",
          "margin": "0 2rem",
          "backdrop": "Floating particles or animated backgrounds"
        },
        "accent": {
          "topBorder": "3px gradient line",
          "bottomBorder": "1px subtle line",
          "description": "Section dividers with gradient accents"
        }
      },

      "tabs": {
        "container": {
          "display": "flex",
          "gap": "0.5rem to 1rem",
          "borderBottom": "1px solid #e5e5e5",
          "paddingBottom": "1rem",
          "marginBottom": "3rem"
        },
        "tab": {
          "background": "none",
          "border": "none",
          "padding": "12px 24px",
          "fontWeight": 500,
          "color": "#666",
          "borderRadius": "6px",
          "transition": "all 0.3s ease",
          "active": {
            "color": "#ff6b35",
            "background": "rgba(255, 107, 53, 0.1)",
            "fontWeight": 600
          },
          "hover": {
            "color": "#ff6b35",
            "background": "rgba(255, 107, 53, 0.1)"
          }
        }
      },

      "navigation": {
        "megaMenu": {
          "background": "rgba(255, 255, 255, 0.9) with backdrop-filter",
          "borderRadius": "12px",
          "borderTop": "3px solid #ff6b35",
          "boxShadow": "0 4px 20px rgba(0, 0, 0, 0.1)",
          "padding": "2rem",
          "maxWidth": "1400px",
          "minHeight": "400px"
        },
        "menuItem": {
          "padding": "1rem 1.5rem",
          "borderRadius": "8px",
          "transition": "all 0.3s ease",
          "hover": {
            "background": "#F5F5F5",
            "color": "#ff6b35"
          }
        }
      },

      "testimonials": {
        "card": {
          "background": "white",
          "padding": "40px",
          "borderRadius": "20px",
          "boxShadow": "0 2px 20px rgba(0, 0, 0, 0.08)"
        },
        "stars": {
          "color": "#ffd700",
          "size": "20px",
          "gap": "4px"
        },
        "avatar": {
          "width": "50px",
          "height": "50px",
          "borderRadius": "50%",
          "background": "linear-gradient(135deg, #ff6b35, #ff8c00)",
          "color": "white",
          "fontWeight": 600,
          "fontSize": "18px"
        }
      },

      "statistics": {
        "container": {
          "borderRadius": "30px",
          "border": "1px solid #eee",
          "padding": "5rem 0",
          "background": "Light gradient with subtle radial accents"
        },
        "number": {
          "fontSize": "3.5rem",
          "fontWeight": 600,
          "color": "#ff6b35",
          "fontFamily": "Cabin"
        },
        "label": {
          "fontSize": "1rem",
          "fontWeight": 500,
          "color": "#000",
          "fontFamily": "Inter"
        }
      }
    },

    "animations": {
      "transitions": {
        "default": "0.3s ease",
        "slow": "0.4s to 0.6s ease",
        "cubic": "0.4s cubic-bezier(0.4, 0, 0.2, 1)",
        "description": "Standard transition timing for interactive elements"
      },
      "effects": {
        "fadeIn": {
          "from": "opacity: 0",
          "to": "opacity: 1",
          "duration": "0.3s to 0.5s"
        },
        "slideUp": {
          "from": "transform: translateY(20px); opacity: 0",
          "to": "transform: translateY(0); opacity: 1",
          "duration": "0.4s to 0.6s",
          "usage": "Cards, panels appearing"
        },
        "slideInLeft": {
          "from": "transform: translateX(-50px); opacity: 0",
          "to": "transform: translateX(0); opacity: 1",
          "duration": "1s",
          "usage": "Hero content"
        },
        "titleReveal": {
          "from": "transform: translateY(100px) or translateY(40px); opacity: 0",
          "to": "transform: translateY(0); opacity: 1",
          "duration": "0.9s to 1.2s",
          "stagger": "0.1s to 0.4s per word",
          "usage": "Hero titles word-by-word animation"
        },
        "float": {
          "from": "transform: translateY(0px) rotate(0deg)",
          "to": "transform: translateY(-20px) rotate(180deg)",
          "duration": "6s",
          "timing": "ease-in-out infinite alternate",
          "usage": "Hero visual elements"
        },
        "spin": {
          "from": "transform: rotate(0deg)",
          "to": "transform: rotate(360deg)",
          "duration": "10s to 20s",
          "timing": "linear infinite",
          "usage": "Decorative circles"
        },
        "pulse": {
          "from": "transform: scale(1); opacity: 1",
          "to": "transform: scale(1.5); opacity: 0.7",
          "duration": "2s",
          "timing": "ease-in-out infinite",
          "usage": "Accent dots"
        }
      },
      "hover": {
        "lift": "transform: translateY(-2px to -8px)",
        "scale": "transform: scale(1.02 to 1.05)",
        "glow": "box-shadow with colored shadow",
        "border": "border-color change to primary",
        "accent": "Top border or accent line appears"
      }
    },

    "patterns": {
      "sectionStructure": {
        "header": {
          "textAlign": "center",
          "marginBottom": "3rem to 4rem",
          "title": "h2 with gradient accent underline",
          "subtitle": "Centered paragraph, max-width 700-800px"
        },
        "content": {
          "maxWidth": "1200px",
          "margin": "0 auto",
          "padding": "0 2rem"
        }
      },
      "cardGrid": {
        "display": "grid",
        "gridTemplateColumns": "repeat(auto-fit, minmax(280px, 1fr))",
        "gap": "1.5rem to 2rem",
        "description": "Responsive grid that adapts to available space"
      },
      "twoColumn": {
        "display": "grid",
        "gridTemplateColumns": "1fr 1fr or 1fr 1.2fr",
        "gap": "3rem to 4rem",
        "alignItems": "center",
        "mobile": "1fr"
      },
      "processSteps": {
        "counter": "CSS counter-reset",
        "layout": "Grid with minmax(260px, 1fr)",
        "cards": "White background with hover lift effect",
        "accent": "Optional top border on hover"
      }
    },

    "implementation": {
      "cssVariables": {
        "colors": {
          "primary": "var(--primary-color)",
          "secondary": "var(--secondary-color)",
          "dark": "var(--dark-color)",
          "light": "var(--light-color)",
          "text": "var(--text-color)",
          "textLight": "var(--text-light)",
          "bodyBg": "var(--body-bg-color)",
          "sectionBg": "var(--section-bg-light)",
          "border": "var(--border-color)",
          "hoverBg": "var(--hover-bg)"
        },
        "fonts": {
          "heading": "var(--font-heading)",
          "body": "var(--font-paragraph)"
        },
        "shadows": {
          "default": "var(--shadow)"
        }
      },
      "imports": {
        "globalStyles": "@import url('../style.css');",
        "fonts": "Google Fonts - Cabin and Inter families",
        "description": "Always import global styles first in page-specific CSS"
      },
      "responsive": {
        "mobileFirst": true,
        "breakpoints": {
          "640": "Mobile adjustments",
          "768": "Tablet layout changes",
          "968": "Small desktop",
          "1024": "Desktop",
          "1200": "Large desktop"
        },
        "clamp": "Use clamp() for fluid typography",
        "grid": "Use auto-fit with minmax for responsive grids"
      }
    },

    "usageGuidelines": {
      "creatingNewPages": {
        "1": "Import global stylesheet first",
        "2": "Use CSS variables for colors and fonts",
        "3": "Follow spacing scale consistently",
        "4": "Apply standard border-radius values",
        "5": "Use established component patterns",
        "6": "Implement hover states for interactive elements",
        "7": "Add smooth transitions (0.3s ease default)",
        "8": "Ensure responsive design with mobile-first approach",
        "9": "Match hero section dark gradient pattern",
        "10": "Use section header pattern with gradient accent"
      },
      "componentReuse": {
        "buttons": "Use .btn--primary class, modify only when necessary",
        "cards": "Apply standard card base styles, customize content",
        "sections": "Follow section padding and background patterns",
        "headers": "Use section-header class pattern",
        "grids": "Use repeat(auto-fit, minmax(280px, 1fr)) for responsive"
      },
      "consistency": {
        "spacing": "Maintain consistent padding and margins using scale",
        "colors": "Always use CSS variables, never hardcode hex values",
        "typography": "Stick to two font families - Cabin for headings, Inter for body",
        "animations": "Keep transition durations consistent (0.3s standard)",
        "borders": "Use 12px for cards, 50px for buttons, 8px for inputs"
      }
    }
  }
}


